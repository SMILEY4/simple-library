{
  "appId": "de.ruegnerlukas.simplelibrary",
  "publish": null,
  "files": [
    ".webpack/main/**/*",
    ".webpack/renderer/**/*"
  ],
  "mac": {
    "target": "dmg"
  },
  "dmg": {
    "title": "${productName} ${version}"
  },
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "artifactName": "${productName} Setup ${version} ${os}.${ext}"
  }
}
